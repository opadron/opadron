
set nocp

syntax enable

set autoindent
set smartindent
set modeline
set ruler

set ts=4
set sw=4

set tabstop=4
set expandtab

set scrolloff=10
set diffopt+=vertical

set hlsearch
set incsearch

set number

filetype plugin on

set tags=./tags;/
map <C-F12> :!ctags -R --c++-kinds=+p --fields=+iaS --extra=+q .<CR>
if has("autocmd")
	autocmd Filetype java setlocal omnifunc=javacomplete#Complete
	autocmd Filetype java setlocal omnifunc=javacomplete#CompleteParamsInfo
endif

"Make Auto-completion awesome!
set completeopt=longest,menuone
inoremap <expr> <CR> pumvisible() ? "\<C-y>" : "\<C-g>u\<CR>"
inoremap <expr> <C-n> pumvisible() ? '<C-n>' : 
  \ '<C-n><C-r>=pumvisible() ? "\<lt>Down>" : ""<CR>'
inoremap <expr> <M-,> pumvisible() ? '<C-n>' :
  \ '<C-x><C-o><C-n><C-p><C-r>=pumvisible() ? "\<lt>Down>" : ""<CR>'

"Add sweet comment key mapping
map c gct

set foldcolumn=2
set foldmethod=syntax
set wildmode=longest,list

let g:indent_guides_enable_on_vim_startup=1
let g:indent_guides_start_level=2
let g:indent_guides_guide_size=1

" highlight OverLength ctermbg=red ctermfg=white guibg=#592929
" match OverLength /\%41v.\+/
set textwidth=80
set colorcolumn=+1

if &diff
    colorscheme ron
else
    set background=dark
    colorscheme ron
    " colorscheme solarize
endif

" highlight current line/column
hi CursorColumn term=underline cterm=underline ctermbg=NONE
hi CursorLine term=underline cterm=underline ctermbg=NONE
" hi CursorColumn term=underline cterm=reverse
" hi CursorLine term=underline cterm=reverse

set cursorline
" set cursorcolumn

